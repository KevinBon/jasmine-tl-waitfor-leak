{
  "name": "react-in-browser-demo",
  "version": "0.1.0",
  "description": "Demo of testing a React app in the browser using jasmine-browser-runner",
  "main": "index.js",
  "scripts": {
    "start": "patch-package && webpack serve  --hot --open --mode development",
    "build": "patch-package && webpack --config webpack.config.js --mode production",
    "test:build": "patch-package && npx webpack --config webpack-test.config.js --mode development",
    "test:watch": "patch-package && npx webpack --config webpack-test.config.js --mode development --watch",
    "test": "npm run test:build && jasmine-browser-runner runSpecs --browser=headlessChrome",
    "test:serve": "npm run test:build && jasmine-browser-runner",
    "test:node": "patch-package && cross-env NODE_ENV=test jasmine",
    "patch-tl-dom": "patch-package @testing-library/dom"
  },
  "author": "Stephen Gravrock",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/register": "^7.22.15",
    "@testing-library/react": "^14.0.0",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "ignore-styles": "^5.0.1",
    "jasmine": "^5.1.0",
    "jasmine-browser-runner": "^2.0.0",
    "jasmine-core": "^5.0.1",
    "jsdom": "^22.1.0",
    "patch-package": "^8.0.0",
    "prettier": "3.0.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
